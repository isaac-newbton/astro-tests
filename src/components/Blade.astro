---

interface Props {
    theme?: string,
    size?: string,
}

const {theme="default", size="default"} = Astro.props;

---

<div class="blade" data-theme={theme} data-size={size}>
    <div class="blade-content-container">
        <slot />
    </div>
    <div class="blade-background-container">
        <slot name="background" />
    </div>
</div>

<style lang="scss">
    .blade {
        padding-block: var(--spacing-unit-15);
        position: relative;

        &[data-size="screen"] {
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
    }

    .blade-content-container {
        position: relative;
        z-index: 1;
        padding-inline: var(--spacing-unit-2);
        width: 100%;
        max-width: var(--content-width);
        margin-inline: auto;
    }

    .blade-background-container {
        position: absolute;
        z-index: 0;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
</style>